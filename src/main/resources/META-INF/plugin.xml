<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.spiral</id>
    <name>Spiral Framework</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <resource-bundle>messages.SpiralBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <multiHostInjector
                implementation="com.github.xepozz.spiral.views.injection.PHPLanguageInjector"/>
        <lang.foldingBuilder
                language="PHP"
                implementationClass="com.github.xepozz.spiral.config.env.EnvFoldingBuilder"/>
        <psi.referenceContributor
                language="PHP"
                implementation="com.github.xepozz.spiral.container.references.ContainerReferenceContributor"/>
        <psi.referenceContributor
                language="PHP"
                implementation="com.github.xepozz.spiral.references.FunctionsReferenceContributor"/>
        <psi.referenceContributor
                language="PHP"
                implementation="com.github.xepozz.spiral.prototyped.PrototypedAttributeReferenceContributor"/>
        <psi.referenceContributor
                language="PHP"
                implementation="com.github.xepozz.spiral.views.references.ViewReferenceContributor"/>
        <fileBasedIndex
                implementation="com.github.xepozz.spiral.config.index.ConfigSectionIndex"/>
        <fileBasedIndex
                implementation="com.github.xepozz.spiral.config.index.PrototypedIndex"/>
        <fileBasedIndex
                implementation="com.github.xepozz.spiral.views.index.ViewsNamespaceIndex"/>
        <completion.contributor
                language="PHP"
                implementationClass="com.github.xepozz.spiral.prototyped.PrototypedCompletion"/>
        <spellchecker.bundledDictionaryProvider
                implementation="com.github.xepozz.spiral.SpellcheckingDictionaryProvider"/>
        <configurationType
                implementation="com.github.xepozz.spiral.console.run.SpiralConsoleCommandRunConfigurationType"/>
        <runLineMarkerContributor
                language="PHP"
                implementationClass="com.github.xepozz.spiral.console.run.ConsoleCommandLineMarkerProvider"/>
        <runConfigurationProducer
                implementation="com.github.xepozz.spiral.console.run.SpiralRunConfigurationProducer"/>
        <runAnything.executionProvider
                implementation="com.github.xepozz.spiral.console.run.SpiralRunAnythingProvider"/>
        <fileBasedIndex
                implementation="com.github.xepozz.spiral.console.index.ConsoleCommandsIndex"/>
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider4
                implementation="com.github.xepozz.spiral.prototyped.PrototypedTypeProvider"/>
    </extensions>
</idea-plugin>
