<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.spiral</id>
    <name>Spiral Framework</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <resource-bundle>messages.SpiralBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <multiHostInjector
                implementation="com.github.xepozz.spiral.views.injection.PHPLanguageInjector"/>
        <psi.referenceContributor
                language="PHP"
                implementation="com.github.xepozz.spiral.references.FunctionsReferenceContributor"/>
        <fileBasedIndex
                implementation="com.github.xepozz.spiral.config.index.ConfigSectionIndex"/>
        <fileBasedIndex
                implementation="com.github.xepozz.spiral.config.index.PrototypedIndex"/>
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.php">
        <typeProvider4
                implementation="com.github.xepozz.spiral.prototyped.PrototypedTypeProvider"/>
    </extensions>
</idea-plugin>
